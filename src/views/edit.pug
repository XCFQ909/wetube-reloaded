extends base.pug

block content
  h4 Update Video
  form(method="POST")
    input(name="title", placeholder="Video Title", value=video.title, required)
    input(value=video.description,placeholder="description", required, type="text", name="description", minlength=20)
    input(value=video.hashtags.join(), placeholder="hashtags *seperate by comma*", required, type="text", name="hashtags")
    input(name="",type="submit", value="Save")
